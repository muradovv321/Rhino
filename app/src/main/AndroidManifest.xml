<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.ogasimli.remoter">

    <!-- TODO: Fix app backup -->
    <!-- TODO: Fix app indexing -->
    <application
        android:name=".app.RemoterApp"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Remoter"
        android:allowBackup="false"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- HomeActivity -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:theme="@style/Theme.Remoter.Activity.Home"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- DetailsActivity -->
        <activity
            android:name=".ui.details.DetailsActivity"
            android:parentActivityName=".ui.home.HomeActivity"
            android:theme="@style/Theme.Remoter.Activity.Details"/>

        <!-- Metadata to download preloaded fonts -->
        <meta-data android:name="preloaded_fonts" android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>