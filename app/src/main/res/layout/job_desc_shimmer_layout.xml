<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:layout_marginEnd="2dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:layout_marginEnd="2dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:layout_marginEnd="5dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:layout_marginEnd="2dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_long"
        android:layout_marginEnd="4dp"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_long"
        android:background="@drawable/shimmer_heading_background"/>

    <View
        android:layout_width="310dp"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="300dp"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="315dp"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:background="@drawable/shimmer_text_background"/>

    <View
        android:layout_width="320dp"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/shimmer_text_margin_bottom_short"
        android:background="@drawable/shimmer_text_background"/>

</LinearLayout>