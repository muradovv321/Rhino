<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.Remoter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <!-- Toolbar theme -->
    <style name="Widget.Remoter.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/Theme.Remoter</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Remoter.Toolbar</item>
    </style>

    <style name="TextAppearance.Remoter.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/controlElementsTextColor</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- TabLayout theme -->
    <style name="Widget.Remoter.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabIconTint">@color/controlElementsTextColor</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabTextAppearance">@style/TextAppearance.Remoter.Tab</item>
    </style>

    <style name="TextAppearance.Remoter.Tab" parent="TextAppearance.MaterialComponents.Tab.Colored">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
