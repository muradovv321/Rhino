<resources>

    <!-- Base application theme -->
    <style name="Theme.Rhino" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Rhino.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Rhino.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Rhino.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Rhino.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Rhino.Caption</item>
        <item name="android:popupWindowStyle">@style/Widget.Rhino.Popup.Window</item>
        <item name="searchViewStyle">@style/Widget.Rhino.SearchView</item>
    </style>

    <!-- Activity Themes -->
    <style name="Theme.Rhino.Activity.Home" parent="Theme.Rhino"/>

    <style name="Theme.Rhino.Activity.Details" parent="Theme.Rhino">
        <item name="colorPrimaryDark">#EBE5E7</item>
    </style>

    <style name="Theme.Rhino.Activity.WebView" parent="Theme.Rhino">
        <item name="colorAccent">@color/controlElementsTextColor</item>
        <item name="android:textColorPrimary">@color/controlElementsTextColor</item>
        <item name="android:textColorSecondary">@color/controlElementsTextColor</item>
    </style>

    <!-- Toolbar theme -->
    <style name="Widget.Rhino.Toolbar.Home" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Rhino.Toolbar.Home</item>
        <item name="titleTextColor">@color/controlElementsTextColor</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.Rhino.ActionOverflowButton</item>
    </style>

    <style name="TextAppearance.Rhino.Toolbar.Home" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Rhino.Toolbar.Details" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Style of menu icon (3 vertical dots) -->
    <style name="Widget.Rhino.ActionOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/controlElementsTextColor</item>
    </style>

    <!-- SearchView theme -->
    <style name="Widget.Rhino.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@android:color/white</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <!-- Popup menu style -->
    <style name="Widget.Rhino.Popup.Window" parent="Widget.AppCompat.PopupWindow">
        <item name="android:popupBackground">@drawable/sort_popup_background</item>
    </style>

    <!-- TabLayout theme -->
    <style name="Widget.Rhino.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabIconTint">@color/controlElementsTextColor</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabTextAppearance">@style/TextAppearance.Rhino.Tab</item>
    </style>

    <style name="TextAppearance.Rhino.Tab" parent="TextAppearance.MaterialComponents.Tab">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.Rhino.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/controlElementsTextColor</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Widget.Rhino.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!-- Chip styles -->
    <style name="Widget.Rhino.Chip.Base" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">6dp</item>
        <item name="chipIconVisible">true</item>
        <item name="checkedIcon">@drawable/ic_chip_checked</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.Rhino.Chip.Default" parent="Widget.Rhino.Chip.Base"/>

    <style name="Widget.Rhino.Chip.Closable" parent="Widget.Rhino.Chip.Base">
        <item name="closeIconVisible">true</item>
    </style>

    <!-- TextAppearance themes -->
    <style name="TextAppearance.Rhino.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.Rhino.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.Rhino.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.Rhino.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="TextAppearance.Rhino.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lato</item>
    </style>
</resources>
