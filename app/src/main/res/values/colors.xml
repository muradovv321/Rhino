<resources>
    <!-- Main color set -->
    <color name="colorPrimary">#933C60</color>
    <color name="colorPrimaryDark">#620936</color>
    <color name="colorAccent">#F3A358</color>
    <color name="textColorPrimary">#000000</color>
    <color name="textColorSecondary">#B3060606</color>

    <!-- BackDrop colors -->
    <color name="backDropColor">@color/colorPrimary</color>
    <color name="backDropFrontColor">#F7F3F7</color>
    <color name="backDropFrontHeaderColor">#FFFFFF</color>
    <color name="backDropFrontHeaderBottomBorderColor">@color/backDropFrontColor</color>

    <!-- Color of control elements (i.e. buttons) located above colorPrimary -->
    <color name="controlElementsTextColor">#FFFFFF</color>
    <color name="colorQuantumGrey">#EBE5E7</color>
    <color name="colorIconLightToolbar">#757575</color>

    <!-- ShimmerLayout colors -->
    <color name="shimmerTextBackgroundColor">#EDB1B1B1</color>
    <color name="shimmerHeaderBackgroundColor">#94333032</color>

    <!-- Button background color -->
    <color name="btnBackEnabledColor">@color/colorPrimary</color>
    <color name="btnBackDisabledColor">#b1acae</color>

    <!-- Background scrim of draggable activity -->
    <color name="detailsActivityBackground">#FFFFFF</color>
    <color name="draggableWindowBackgroundColor">#50878686</color>

    <!-- SwipeRefreshLayout color resource array -->
    <array name="swipeRefreshColorArray">
        <item>@color/colorPrimary</item>
        <item>@color/colorAccent</item>
    </array>
</resources>
