<resources>
    <!-- Activity Themes -->
    <style name="Theme.Rhino.Activity.Home" parent="Theme.Rhino">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowReturnTransition">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/slide_top</item>
    </style>

    <style name="Theme.Rhino.Activity.Details" parent="Theme.Rhino">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowReturnTransition">@android:transition/slide_bottom</item>
    </style>

    <!-- TextAppearance of Toolbar Title -->
    <style name="TextAppearance.Rhino.Toolbar.Home" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/controlElementsTextColor</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.09</item>
    </style>

    <!-- Popup menu style -->
    <style name="Widget.Rhino.Popup.Window" parent="android:Widget.PopupWindow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:popupElevation">30dp</item>
        <item name="android:popupBackground">@drawable/sort_popup_background</item>
    </style>
</resources>